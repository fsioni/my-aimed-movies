{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "prettier",
    "prettier/@typescript-eslint",
    "eslint:recommended",
    "prettier-plugin-tailwindcss",
    "eslint-plugin-tailwindcss"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ]
}
